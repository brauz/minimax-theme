{% schema %}
  {
    "name": "Product Page",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      },
        {
  		  "type": "checkbox",
  		  "id": "show_delivery_estimator",
  		  "label": "Show delivery estimator"
        },
  		{
  		  "type": "checkbox",
          "id": "show_quantity",
          "label": "Show quantity"
        },
  		{
  		  "type": "checkbox",
          "id": "show_sku",
          "label": "Show SKU",
          "default": true
        },
  		{
          "type": "header",
          "content": "Product Carousel"
        },
  		{
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Kitchenware Specials"
        },
  		{
          "id": "collection",
          "type": "collection",
          "label": "Collection"
        }
    ],

